<%= form_for(@item) do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label 'Done' %>
  <%= radio_button('item', 'completed', true) %>

  <%= f.label 'Not Done' %>
  <%= radio_button('item', 'completed', false) %>

  <%= f.submit %>
<% end %>

<%= link_to 'Back', item_path(@item.id) %>
