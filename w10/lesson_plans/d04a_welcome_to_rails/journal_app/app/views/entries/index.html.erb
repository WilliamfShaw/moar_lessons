<p id="notice"><%= notice %></p>

<h1>Listing Entries</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Journal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.content %></td>
        <td><%= entry.journal.name %></td>
        <td><a href="/entries/<%= entry.id %>">Show</a></td>
        <td><a href="/entries/<%= entry.id %>/edit">Edit</a></td>
        <td><a href="/entries/<%= entry.id %>" data-method="delete">Destroy</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="/entries/new">New Entry</a>
