<h2>Sign Up</h2>

<%= form_for @user do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>

  <%= f.label :bio %><br>
  <%= f.text_area :bio %><br>

  <%= f.submit %>
<% end %>
