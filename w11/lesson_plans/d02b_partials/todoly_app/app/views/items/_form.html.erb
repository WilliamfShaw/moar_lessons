<%= form_for(@item) do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <% if @item.persisted? %>
    <%= f.label 'Done' %>
    <%= radio_button('item', 'completed', true) %>

    <%= f.label 'Not Done' %>
    <%= radio_button('item', 'completed', false) %>
  <% end %>
  <%= f.submit %>
<% end %>
